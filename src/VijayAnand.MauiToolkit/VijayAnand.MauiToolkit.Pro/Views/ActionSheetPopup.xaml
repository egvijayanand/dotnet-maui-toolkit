<?xml version="1.0" encoding="UTF-8" ?>
<mct:Popup
    x:Class="VijayAnand.MauiToolkit.Pro.Views.ActionSheetPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VijayAnand.MauiToolkit.Pro.Views"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="local:ActionSheetPopup"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Opened="OnPopupOpened"
    Size="{Binding DialogSize}"
    Color="Transparent">
    <mct:Popup.Content>
        <Frame
            Padding="0"
            CornerRadius="5"
            HasShadow="True">
            <Grid
                x:Name="container"
                Padding="20"
                RowDefinitions="50, 1, Auto, *, 60">
                <Label
                    x:Name="lblTitle"
                    Grid.Row="0"
                    FontAttributes="Bold"
                    VerticalOptions="Center" />
                <BoxView
                    Grid.Row="1"
                    HeightRequest="1"
                    HorizontalOptions="Fill"
                    Color="LightGray" />
                <Label
                    x:Name="lblMessage"
                    Grid.Row="2"
                    Margin="0,10" />
                <VerticalStackLayout
                    x:Name="actions"
                    Grid.Row="3"
                    BindableLayout.ItemsSource="{Binding Buttons}"
                    VerticalOptions="Center">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="{x:Type x:String}">
                            <Button
                                Clicked="OnClicked"
                                Text="{Binding .}" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
                <HorizontalStackLayout
                    Grid.Row="4"
                    HorizontalOptions="End"
                    VerticalOptions="Center">
                    <Button
                        x:Name="btnDestructive"
                        Clicked="OnClicked" />
                    <Button
                        x:Name="btnCancel"
                        Clicked="OnClicked" />
                </HorizontalStackLayout>
            </Grid>
        </Frame>
    </mct:Popup.Content>
</mct:Popup>
